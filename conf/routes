# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Public from MTurk
GET     /publix/:studyId/start                           @controllers.publix.MTPublix.startStudy(studyId: Long)
GET     /publix/:studyId/end                             @controllers.publix.MTPublix.finishStudy(studyId: Long, successful: Boolean ?= true, errorMsg: String ?= null)
GET     /publix/:studyId/:componentId/start              @controllers.publix.MTPublix.startComponent(studyId: Long, componentId: Long)
GET     /publix/:studyId/startNextComponent              @controllers.publix.MTPublix.startNextComponent(studyId: Long)
GET     /publix/:studyId/:componentId/getData            @controllers.publix.MTPublix.getComponentData(studyId: Long, componentId: Long)
POST    /publix/:studyId/:componentId/submitResultData   @controllers.publix.MTPublix.submitResultData(studyId: Long, componentId: Long)

# Public from MechArg
GET     /mecharg/publix/:studyId/start                           @controllers.publix.MAPublix.startStudy(studyId: Long)
GET     /mecharg/publix/:studyId/end                             @controllers.publix.MAPublix.finishStudy(studyId: Long, successful: Boolean ?= true, errorMsg: String ?= null)
GET     /mecharg/publix/:studyId/:componentId/start              @controllers.publix.MAPublix.startComponent(studyId: Long, componentId: Long)
GET     /mecharg/publix/:studyId/startNextComponent              @controllers.publix.MAPublix.startNextComponent(studyId: Long)
GET     /mecharg/publix/:studyId/:componentId/getData            @controllers.publix.MAPublix.getComponentData(studyId: Long, componentId: Long)
POST    /mecharg/publix/:studyId/:componentId/submitResultData   @controllers.publix.MAPublix.submitResultData(studyId: Long, componentId: Long)

# Public general
POST    /publix/logError                                 @controllers.publix.Publix.logError()
GET     /publix/                                         @controllers.publix.Publix.index()
GET     /publix                                          @controllers.publix.Publix.index()

# MechArg
GET     /mecharg/login                                 controllers.Authentication.login()
POST    /mecharg/login                                 controllers.Authentication.authenticate()
GET     /mecharg/logout                                controllers.Authentication.logout()
GET     /mecharg                                       controllers.Dashboard.dashboard()
GET     /mecharg/                                      controllers.Dashboard.dashboard()
GET     /                                              controllers.Dashboard.dashboard()
GET     /mecharg/user/create                           controllers.Users.create()
POST    /mecharg/user/create                           controllers.Users.submit()
GET     /mecharg/user/:email/editProfile               controllers.Users.editProfile(email: String)
POST    /mecharg/user/:email/editProfile               controllers.Users.submitEditedProfile(email: String)
GET     /mecharg/user/:email/changePassword            controllers.Users.changePassword(email: String)
POST    /mecharg/user/:email/changePassword            controllers.Users.submitChangedPassword(email: String)
GET     /mecharg/user/:email                           controllers.Users.profile(email: String)
GET     /mecharg/user/:email/                          controllers.Users.profile(email: String)
GET     /mecharg/createStudy                           controllers.Studies.create()
POST    /mecharg/createStudy                           controllers.Studies.submit()
GET     /mecharg/:studyId/properties                   controllers.Studies.properties(studyId: Long)
POST    /mecharg/:studyId/properties                   controllers.Studies.submitProperties(studyId: Long)
GET     /mecharg/:studyId/changeMembers                controllers.Studies.changeMembers(studyId: Long)
POST    /mecharg/:studyId/changeMembers                controllers.Studies.submitChangedMembers(studyId: Long)
DELETE  /mecharg/:studyId/remove                       controllers.Studies.remove(studyId: Long)
POST    /mecharg/:studyId/changeComponentOrder         controllers.Studies.changeComponentOrder(studyId: Long, componentId: Long, direction: String)
GET     /mecharg/:studyId/mturk                        controllers.Studies.showMTurkSourceCode(studyId: Long)
GET     /mecharg/:studyId                              controllers.Studies.index(studyId: Long)
GET     /mecharg/:studyId/                             controllers.Studies.index(studyId: Long)
GET     /mecharg/:studyId/createComponent              controllers.Components.create(studyId: Long)
POST    /mecharg/:studyId/createComponent              controllers.Components.submit(studyId: Long)
GET     /mecharg/:studyId/:componentId/edit            controllers.Components.edit(studyId: Long, componentId: Long)
POST    /mecharg/:studyId/:componentId/edit            controllers.Components.submitEdited(studyId: Long, componentId: Long)
GET     /mecharg/:studyId/:componentId/removeResults   controllers.Components.removeResults(studyId: Long, componentId: Long)
POST    /mecharg/:studyId/:componentId/removeResults   controllers.Components.submitRemovedResults(studyId: Long, componentId: Long)
DELETE  /mecharg/:studyId/:componentId/remove          controllers.Components.remove(studyId: Long, componentId: Long)
GET     /mecharg/:studyId/:componentId/try             controllers.Components.tryComponent(studyId: Long, componentId: Long)
GET     /mecharg/:studyId/:componentId                 controllers.Components.index(studyId: Long, componentId: Long)
GET     /mecharg/:studyId/:componentId/                controllers.Components.index(studyId: Long, componentId: Long)

# Static resources (not managed by the Play framework) from the /public folder
GET     /assets/*file             controllers.Assets.at(path="/public", file)
GET     /studies/*file            controllers.Assets.at(path="/public/studies", file)
