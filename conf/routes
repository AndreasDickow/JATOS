# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                              controllers.Application.index()
POST    /error                         controllers.Application.logError()
GET     /component/:id                controllers.Application.component(id: Long)
POST    /component/:id                controllers.Application.submitResult(id: Long)
GET     /componentdata/:id            controllers.Application.componentData(id: Long)
GET     /admin/login                   controllers.Admin.login()
POST    /admin/login                   controllers.Admin.authenticate()
GET     /admin/logout                  controllers.Admin.logout()
GET     /admin/component/create       controllers.Admin.createComponent()
POST    /admin/component/create       controllers.Admin.submitComponent()
GET     /admin/component/:id/update   controllers.Admin.updateComponent(id: Long)
POST    /admin/component/:id/update   controllers.Admin.submitUpdatedComponent(id: Long)
DELETE  /admin/component/:id/delete   controllers.Admin.deleteComponent(id: Long)
GET     /admin/component/:id          controllers.Admin.component(id: Long)
GET     /admin/component/:id/         controllers.Admin.component(id: Long)
GET     /admin/component              controllers.Admin.index()
GET     /admin/component/             controllers.Admin.index()
GET     /admin                         controllers.Admin.index()
GET     /admin/                        controllers.Admin.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /staticcomponent/*file     controllers.Assets.at(path="/public/components", file)
