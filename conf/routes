# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Public
POST    /ma/logError                               controllers.Publix.logError()
GET     /ma/:experimentId/start                    controllers.Publix.startExperiment(experimentId: Long, workerId: String)
GET     /ma/:experimentId/end                      controllers.Publix.endExperiment(experimentId: Long)
GET     /ma/:experimentId/:componentId             controllers.Publix.getComponentData(experimentId: Long, componentId: Long)
POST    /ma/:experimentId/:componentId             controllers.Publix.submitResult(experimentId: Long, componentId: Long)
GET     /ma/:experimentId/:componentId/done        controllers.Publix.setComponentDone(experimentId: Long, componentId: Long)
GET     /ma/:experimentId/:componentId/nextUrl     controllers.Publix.getNextComponentUrl(experimentId: Long, componentId: Long)
GET     /ma/:experimentId/:componentId/url         controllers.Publix.getComponentUrl(experimentId: Long, componentId: Long)

# Admin
GET     /admin/login                                      controllers.Admin.login()
POST    /admin/login                                      controllers.Admin.authenticate()
GET     /admin/logout                                     controllers.Admin.logout()
GET     /admin                                            controllers.Admin.index()
GET     /admin/                                           controllers.Admin.index()
GET     /                                                 controllers.Admin.index()
GET     /admin/user/create                                controllers.Users.create()
POST    /admin/user/create                                controllers.Users.submit()
GET     /admin/user/:email/update                         controllers.Users.update(email: String)
POST    /admin/user/:email/update                         controllers.Users.submitUpdated(email: String)
GET     /admin/user/:email/changePassword                 controllers.Users.changePassword(email: String)
POST    /admin/user/:email/changePassword                 controllers.Users.submitChangedPassword(email: String)
GET     /admin/user/:email                                controllers.Users.index(email: String)
GET     /admin/user/:email/                               controllers.Users.index(email: String)
GET     /admin/createExperiment                           controllers.Experiments.create()
POST    /admin/createExperiment                           controllers.Experiments.submit()
GET     /admin/:experimentId/update                       controllers.Experiments.update(experimentId: Long)
POST    /admin/:experimentId/update                       controllers.Experiments.submitUpdated(experimentId: Long)
GET     /admin/:experimentId/updateMembers                controllers.Experiments.updateMembers(experimentId: Long)
POST    /admin/:experimentId/updateMembers                controllers.Experiments.submitUpdatedMembers(experimentId: Long)
DELETE  /admin/:experimentId/delete                       controllers.Experiments.delete(experimentId: Long)
POST    /admin/:experimentId/changeComponentOrder         controllers.Experiments.changeComponentOrder(experimentId: Long, componentId: Long, direction: String)
GET     /admin/:experimentId                              controllers.Experiments.index(experimentId: Long)
GET     /admin/:experimentId/                             controllers.Experiments.index(experimentId: Long)
GET     /admin/:experimentId/createComponent              controllers.Components.create(experimentId: Long)
POST    /admin/:experimentId/createComponent              controllers.Components.submit(experimentId: Long)
GET     /admin/:experimentId/:componentId/update          controllers.Components.update(experimentId: Long, componentId: Long)
POST    /admin/:experimentId/:componentId/update          controllers.Components.submitUpdated(experimentId: Long, componentId: Long)
GET     /admin/:experimentId/:componentId/deleteResults   controllers.Components.deleteResults(experimentId: Long, componentId: Long)
POST    /admin/:experimentId/:componentId/deleteResults   controllers.Components.submitDeletedResults(experimentId: Long, componentId: Long)
DELETE  /admin/:experimentId/:componentId/delete          controllers.Components.delete(experimentId: Long, componentId: Long)
GET     /admin/:experimentId/:componentId/try             controllers.Components.tryComponent(experimentId: Long, componentId: Long)
GET     /admin/:experimentId/:componentId                 controllers.Components.index(experimentId: Long, componentId: Long)
GET     /admin/:experimentId/:componentId/                controllers.Components.index(experimentId: Long, componentId: Long)

# Static resources (not managed by the Play framework) from the /public folder
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
GET     /experiments/*file            controllers.Assets.at(path="/public/experiments", file)
