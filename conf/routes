# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Public
GET     /                                          controllers.Application.index()
POST    /error                                     controllers.Application.logError()
GET     /data/:experimentId/:componentId           controllers.Application.getComponentData(experimentId: Long, componentId: Long)
POST    /data/:experimentId/:componentId           controllers.Application.submitResult(experimentId: Long, componentId: Long)

# Admin
GET     /admin/login                               controllers.Admin.login()
POST    /admin/login                               controllers.Admin.authenticate()
GET     /admin/logout                              controllers.Admin.logout()
GET     /admin/createexperiment                    controllers.Admin.createExperiment()
POST    /admin/createexperiment                    controllers.Admin.submitExperiment()
GET     /admin/:experimentId/update                controllers.Admin.updateExperiment(experimentId: Long)
POST    /admin/:experimentId/update                controllers.Admin.submitUpdatedExperiment(experimentId: Long)
DELETE  /admin/:experimentId/delete                controllers.Admin.deleteExperiment(experimentId: Long)
GET     /admin/:experimentId                       controllers.Admin.experiment(experimentId: Long)
GET     /admin/:experimentId/                      controllers.Admin.experiment(experimentId: Long)
GET     /admin/:experimentId/createcomponent       controllers.Admin.createComponent(experimentId: Long)
POST    /admin/:experimentId/createcomponent       controllers.Admin.submitComponent(experimentId: Long)
GET     /admin/:experimentId/:componentId/update   controllers.Admin.updateComponent(experimentId: Long, componentId: Long)
POST    /admin/:experimentId/:componentId/update   controllers.Admin.submitUpdatedComponent(experimentId: Long, componentId: Long)
DELETE  /admin/:experimentId/:componentId/delete   controllers.Admin.deleteComponent(experimentId: Long, componentId: Long)
GET     /admin/:experimentId/:componentId          controllers.Admin.component(experimentId: Long, componentId: Long)
GET     /admin/:experimentId/:componentId/         controllers.Admin.component(experimentId: Long, componentId: Long)
GET     /admin                                     controllers.Admin.index()
GET     /admin/                                    controllers.Admin.index()

# Static resources (not managed by the Play framework) from the /public folder
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
GET     /experiments/*file            controllers.Assets.at(path="/public/experiments", file)
